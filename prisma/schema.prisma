// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email        String  @unique
  password     String
  refreshToken String?

  name    String
  avatar  String?
  address UserAddress?

  @@map("users")
}

model UserAddress {
  id       Int    @id @default(autoincrement())
  street   String
  city     String
  postCode String
  country  String

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int  @unique

  @@map("user-addresses")
}
